				<string>IFS=$'\t'

options={query}

tmpfile=$(mktemp "${TMPDIR:-/tmp/}$(basename $0).XXXXXXXXXXXX")

echo "&lt;html&gt;&lt;head&gt;&lt;meta charset="UTF-8"&gt;&lt;/head&gt;&lt;body&gt;" &gt; "$tmpfile"

for file in ${selection}; do

case "$options" in
        md5)
            digest=`md5 -q "$file"`
            alg='md5'
            ;;
         
        sha1)
            digest=`shasum -a 1 "$file" | cut -d' '  -f1`
            alg='sha-1'
            ;;
         
        sha256)
            digest=`shasum -a 256 "$file" | cut -d' '  -f1`
            alg='sha-256'
            ;;

        sha384)
            digest=`shasum -a 384 "$file" | cut -d' '  -f1`
            alg='sha-384'
            ;;

        sha512)
            digest=`shasum -a 512 "$file" | cut -d' '  -f1`
            alg='sha-512'
            ;;         
        *)
            exit 1
esac

  echo "&lt;pre&gt;&lt;b&gt;[$alg][$file]&lt;/b&gt;&lt;br /&gt;$digest&lt;/pre&gt;" &gt;&gt; "$tmpfile"
done

echo "&lt;/body&gt;&lt;/html&gt;" &gt;&gt; "$tmpfile"

automator -i "file://$tmpfile" popup.wflow</string>
